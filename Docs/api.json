  "components": {
    "schemas": {
      "AssetCreateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the asset",
            "nullable": true
          },
          "description": {
            "type": "string",
            "description": "Optional description of the asset",
            "nullable": true
          },
          "financialGroupId": {
            "type": "integer",
            "description": "The ID of the financial group this asset belongs to",
            "format": "int32",
            "nullable": true
          },
          "assetTypeId": {
            "type": "integer",
            "description": "The ID of the asset type",
            "format": "int32",
            "nullable": true
          },
          "currencyCode": {
            "maxLength": 3,
            "minLength": 0,
            "type": "string",
            "description": "The currency code for this asset",
            "nullable": true
          },
          "initialValue": {
            "type": "number",
            "description": "Optional initial value of the asset. If provided, will create an initial AssetValue record.",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Request DTO for creating a new asset"
      },
      "AssetTypeCreateRequest": {
        "type": "object",
        "properties": {
          "defaultName": {
            "type": "string",
            "description": "The default name for the asset type (usually in English)",
            "nullable": true,
            "example": "Cash"
          },
          "isAsset": {
            "type": "boolean",
            "description": "Whether this represents an asset (true) or liability (false)"
          },
          "isPhysical": {
            "type": "boolean",
            "description": "Whether this is a physical asset"
          },
          "isLiquid": {
            "type": "boolean",
            "description": "Whether this asset type is easily convertible to cash"
          },
          "translations": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Translations for different languages. Key is language code (en, es, fr, de), value is translated name.",
            "nullable": true,
            "example": {
              "en": "Cash",
              "es": "Efectivo",
              "fr": "Espèces",
              "de": "Bargeld"
            }
          }
        },
        "additionalProperties": false,
        "description": "Request to create a new asset type with multilingual support"
      },
      "AssetTypeListResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The unique identifier for the asset type",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "description": "The display name (either translated or default name)",
            "nullable": true
          },
          "isAsset": {
            "type": "boolean",
            "description": "Whether this represents an asset (true) or liability (false)"
          },
          "isPhysical": {
            "type": "boolean",
            "description": "Whether this is a physical asset"
          },
          "isLiquid": {
            "type": "boolean",
            "description": "Whether this asset type is easily convertible to cash"
          }
        },
        "additionalProperties": false,
        "description": "Response DTO for asset type list operations"
      },
      "AssetTypeUpdateRequest": {
        "type": "object",
        "properties": {
          "defaultName": {
            "type": "string",
            "description": "The default name of the asset type (usually English)",
            "nullable": true
          },
          "isAsset": {
            "type": "boolean",
            "description": "Indicates whether this type represents an asset (true) or liability (false)",
            "nullable": true
          },
          "isPhysical": {
            "type": "boolean",
            "description": "Indicates whether this asset type is physical or digital",
            "nullable": true
          },
          "isLiquid": {
            "type": "boolean",
            "description": "Indicates whether this asset type is easily convertible to cash",
            "nullable": true
          },
          "translations": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            },
            "description": "Dictionary of translations where key is language code and value is translated name",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Request DTO for updating an existing asset type"
      },
      "AssetUpdateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the asset",
            "nullable": true
          },
          "description": {
            "type": "string",
            "description": "Optional description of the asset",
            "nullable": true
          },
          "financialGroupId": {
            "type": "integer",
            "description": "The ID of the financial group this asset belongs to",
            "format": "int32",
            "nullable": true
          },
          "assetTypeId": {
            "type": "integer",
            "description": "The ID of the asset type",
            "format": "int32",
            "nullable": true
          },
          "currencyCode": {
            "maxLength": 3,
            "minLength": 0,
            "type": "string",
            "description": "The currency code for this asset",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Request DTO for updating an existing asset"
      },
      "AssetValueCreateRequest": {
        "required": [
          "assetId",
          "value"
        ],
        "type": "object",
        "properties": {
          "assetId": {
            "type": "integer",
            "description": "The ID of the asset this value belongs to",
            "format": "int32"
          },
          "value": {
            "type": "number",
            "description": "The monetary value of the asset at the recorded time",
            "format": "double"
          }
        },
        "additionalProperties": false,
        "description": "Request DTO for creating a new asset value record"
      },
      "AssetValueUpdateRequest": {
        "required": [
          "recordedAt",
          "value"
        ],
        "type": "object",
        "properties": {
          "value": {
            "type": "number",
            "description": "The monetary value of the asset at the recorded time",
            "format": "double"
          },
          "recordedAt": {
            "type": "string",
            "description": "The date and time when this value was recorded",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Request DTO for updating an existing asset value record"
      },
      "CreateAdminDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CurrencyConversionRequest": {
        "required": [
          "amount",
          "fromCurrencyCode",
          "toCurrencyCode"
        ],
        "type": "object",
        "properties": {
          "amount": {
            "minimum": 0.01,
            "type": "number",
            "description": "Amount to convert",
            "format": "double"
          },
          "fromCurrencyCode": {
            "maxLength": 3,
            "minLength": 0,
            "type": "string",
            "description": "Source currency code"
          },
          "toCurrencyCode": {
            "maxLength": 3,
            "minLength": 0,
            "type": "string",
            "description": "Target currency code"
          }
        },
        "additionalProperties": false,
        "description": "DTO for currency conversion requests"
      },
      "CurrencyCreateRequest": {
        "required": [
          "code",
          "name"
        ],
        "type": "object",
        "properties": {
          "code": {
            "maxLength": 3,
            "minLength": 0,
            "type": "string",
            "description": "ISO 4217 currency code (e.g., USD, EUR, SEK)"
          },
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "Full currency name (e.g., US Dollar, Euro, Swedish Krona)"
